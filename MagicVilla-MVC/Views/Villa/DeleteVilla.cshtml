@model MagicVilla_MVC.Models.DTO.VillaDTO

<form asp-action="DeleteVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">DELETE VILLA</h1>
        <hr />

        @*When we are updating the villa properties we need the Id of that villa.*@
        <input hidden asp-for="Id" />

        <div class="row">
           @* For delete we don't need any validation *@

            @*================================ Name ================================*@

            @* Display title name*@
            <div class="col-2">
                <label asp-for="@Model.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            @* Input section *@
            <div class="col-10 pb-3">
                <input disabled asp-for="@Model.Name" class="form-control" />
            </div>

            @*================================ ImageUrl ================================*@

            <div class="col-2">
                <label asp-for="@Model.ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="@Model.ImageUrl" class="form-control" />
            </div>

            @*================================ Details ================================*@

            <div class="col-2">
                <label asp-for="@Model.Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="@Model.Details" class="form-control" rows="5"></textarea>
            </div>

            @*================================ Occupancy ================================*@

            @* Display title name*@
            <div class="col-2">
                <label asp-for="@Model.Occupancy" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="@Model.Occupancy" class="form-control" />
            </div>

            @*================================ Sqft ================================*@

            <div class="col-2">
                <label asp-for="@Model.Sqft" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="@Model.Sqft" class="form-control" />
            </div>

            @*================================ Amenity ================================*@

            <div class="col-2">
                <label asp-for="@Model.Amenity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="@Model.Amenity" class="form-control"></textarea>
            </div>

            @*================================ Rate ================================*@

            <div class="col-2">
                <label asp-for="@Model.Rate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="@Model.Rate" class="form-control" />
            </div>

            @*==================================================================*@

            <div class="col-5 offset-2">
                <a asp-controller="Villa" asp-action="IndexVilla" class="btn btn-primary form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@* Here we are adding the reference for the client side validation*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}