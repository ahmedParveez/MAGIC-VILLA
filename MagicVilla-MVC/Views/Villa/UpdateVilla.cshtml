@model MagicVilla_MVC.Models.DTO.UpdateDTO

<form asp-action="UpdateVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">UPDATE VILLA</h1>
        <hr />

        @*When we are updating the villa properties we need the Id of that villa.*@
        <input hidden asp-for="Id" />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* This is used for the text validation*@

            @*================================ Name ================================*@

            @* Display title name*@
            <div class="col-2">
                <label asp-for="@Model.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            @* Input section *@
            <div class="col-10 pb-3">
                <input asp-for="@Model.Name" class="form-control" />
                @*Span tag is to validate the input*@
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            @*================================ ImageUrl ================================*@

            <div class="col-2">
                <label asp-for="@Model.ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            @*================================ Details ================================*@

            <div class="col-2">
                <label asp-for="@Model.Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="@Model.Details" class="text-danger"></span>
            </div>

            @*================================ Occupancy ================================*@

            @* Display title name*@
            <div class="col-2">
                <label asp-for="@Model.Occupancy" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Occupancy" class="form-control" />
                <span asp-validation-for="@Model.Occupancy" class="text-danger"></span>
            </div>

            @*================================ Sqft ================================*@

            <div class="col-2">
                <label asp-for="@Model.Sqft" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Sqft" class="form-control" />
                <span asp-validation-for="@Model.Sqft" class="text-danger"></span>
            </div>

            @*================================ Amenity ================================*@

            <div class="col-2">
                <label asp-for="@Model.Amenity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.Amenity" class="form-control"></textarea>
                <span asp-validation-for="@Model.Amenity" class="text-danger"></span>
            </div>

            @*================================ Rate ================================*@

            <div class="col-2">
                <label asp-for="@Model.Rate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Rate" class="form-control" />
                <span asp-validation-for="@Model.Rate" class="text-danger"></span>
            </div>

            @*==================================================================*@

            <div class="col-5 offset-2">
                <a asp-controller="Villa" asp-action="IndexVilla" class="btn btn-primary form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@* Here we are adding the reference for the client side validation*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}