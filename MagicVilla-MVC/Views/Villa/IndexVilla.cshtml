@model IEnumerable<MagicVilla_MVC.Models.DTO.VillaDTO>
<br />
<div class="container p-4 border">
    <div class="col">
        <h1 class="text-primary" style="text-transform:uppercase">Villa List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> &nbsp; ADD</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Price
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @*V have already extracted the data inside the '@model' in the beginning*@
            @foreach (var item in Model) @*We can access that model by using 'Model'*@
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
